generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ðŸ‘‡ IMPORTANT: Prisma CLI will now read THIS variable
url = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())

  decisions Decision[]
}

model Decision {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id])

  domain              String
  decision            String
  stakes              String
  horizon             String

  riskScore           Int
  downsideProbability Int
  regretIndex         Int
  confidenceScore     Int
  boardRecommendation String

  createdAt           DateTime @default(now())
}

