generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())

  decisions Decision[]
}

model Decision {
  id                  String   @id @default(cuid())
  userId              String

  // =========================
  // CORE DECISION INPUT
  // =========================
  domain              String
  decision            String
  stakes              String
  horizon             String

  // =========================
  // INTELLIGENCE OUTPUTS
  // =========================
  riskScore           Int
  downsideProbability Int
  regretIndex         Int
  confidenceScore     Int
  boardRecommendation String

  // =========================
  // DECISION LIFECYCLE
  // =========================
  analysisRun         Boolean  @default(false)
  includedInReport    Boolean  @default(false)

  decisionStatus      String   @default("DRAFT")
  // DRAFT | ANALYZED | APPROVED | REJECTED | ARCHIVED

  // =========================
  // AUDIT & HISTORY
  // =========================
  createdAt           DateTime @default(now())
  analyzedAt          DateTime?
  approvedAt          DateTime?

  // =========================
  // RELATIONS
  // =========================
  user                User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([decisionStatus])
  @@index([createdAt])
}

