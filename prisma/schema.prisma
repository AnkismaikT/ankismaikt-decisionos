generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./decisionos.db"
}

model Decision {
  id                   String   @id @default(cuid())
  domain               String
  decision             String
  stakes               String
  horizon              String
  riskLevel             String
  detectedBiases        String
  downsideScenarios     String
  regretAnalysis        String
  boardRecommendation   String
  createdAt            DateTime @default(now())
}

